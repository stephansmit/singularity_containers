Bootstrap: docker
From: ubuntu:16.04
  
%post
    apt-get -y update
    apt-get -y install python3 git build-essential autoconf python-dev libopenmpi-dev openmpi-common openmpi-bin
    git clone --branch develop --depth=1 https://github.com/su2code/SU2    
    cd SU2
    git checkout d910125feb86b4a750f72d1f6acadbab7735b448
    autoreconf -i
    export CXXFLAGS="-O3"
    python3 preconfigure.py --enable-mpi --prefix=$PWD
    make install -j 7
    make clean
 
%runscript
     exec /SU2/bin/$1 $2     
